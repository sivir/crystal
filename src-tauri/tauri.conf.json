{
	"$schema": "https://schema.tauri.app/config/2",
	"productName": "crystal",
	"version": "3.4.0",
	"identifier": "lol.challenges.crystal",
	"build": {
		"beforeDevCommand": "deno task dev",
		"devUrl": "http://localhost:1421",
		"beforeBuildCommand": "deno task build",
		"frontendDist": "../dist"
	},
	"app": {
		"windows": [
			{
				"title": "crystal",
				"width": 1300,
				"height": 600,
				"decorations": false,
				"resizable": true
			}
		],
		"security": {
			"csp": null
		}
	},
	"bundle": {
		"active": true,
		"targets": "all",
		"icon": [
			"icons/32x32.png",
			"icons/128x128.png",
			"icons/128x128@2x.png",
			"icons/icon.icns",
			"icons/icon.ico"
		]
	}
}
